<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <!--tablayout字体-->
    <style name="TabLayoutTextSizeStyle">
        <item name="android:textSize">15dp</item>
    </style>

    <!--popwindow  首页下拉动画-->
    <style name="popmenu_animation" >
        <item name="android:windowEnterAnimation">@anim/popwindow_show</item>
        <item name="android:windowExitAnimation">@anim/popwindow_hide</item>
    </style>
    <!--popwindow  首页发布动画-->
    <style name="popissue_animation" >
        <item name="android:windowEnterAnimation">@anim/popwindow_issue_show</item>
        <item name="android:windowExitAnimation">@anim/popwindow_issue_hide</item>
    </style>
    <!--popwindow  发布任务选择类型动画-->
    <style name="popskilltype_animation" >
        <item name="android:windowEnterAnimation">@anim/popwindow_skilltype_show</item>
        <!--<item name="android:windowExitAnimation">@anim/popwindow_issue_hide</item>-->
    </style>
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_show2</item>
        <!-- 指定显示时的动画xml -->
        <!--<item name="android:windowExitAnimation">@anim/popwindow_hide</item>-->
        <!-- 指定消失时的动画xml -->
    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:minHeight">50dp</item>
    </style>



    <!--底部弹框 密码键盘部分-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 黑色正常大小的文字 -->
    <style name="style_black_normal_text">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingRight">@dimen/spacing_tiny</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/gray_line</item>
    </style>
    <declare-styleable name="PayPwdView">
        <attr name="count" format="integer" />
        <attr name="border_color" format="color" />
        <attr name="dot_color" format="color" />
    </declare-styleable>
    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">2px</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--键盘数字-->
    <style name="btn_input_num_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/selector_item_pressed</item>
    </style>
</resources>
