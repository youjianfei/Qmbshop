<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmbshop.activity.SkillDetailActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="9dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="服务详情"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>
    <com.jingnuo.quanmbshop.customview.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        android:layout_above="@+id/linearlayout_bottom"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_shopskilltitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="服务标题"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_skillIssueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="发布时间   "
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/text_shopskilltitel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_peoplelook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="已有1人浏览"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/text_shopskilltitel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:id="@+id/image_line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_peoplelook"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="服务类型"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_skilltype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text=""
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line1"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_a"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="联系商家"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_shoppeoplename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="联系人"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line2"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_b"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="商家地址"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_shopaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="商家地址"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line3"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:lines="1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/address"
                android:layout_below="@+id/image_line3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/image_line4"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_c"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="认  证"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/certify"
                android:layout_below="@+id/image_line4"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/text_d"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="认证"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_below="@+id/image_line4"
                android:layout_toRightOf="@+id/text_a"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line5"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_d"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="服务详情"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_line6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_e"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_servicedetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="服务详情"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/image_line7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_servicedetail"
                android:background="@color/gray_dbdbdb"
                />
            <TextView
                android:id="@+id/text_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="展开更多"
                android:textColor="@color/text_hide_tip"
                android:layout_below="@+id/image_line7"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:lines="1"
                />

            <RelativeLayout
                android:id="@+id/skill_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text_more"
                >
                <com.jingnuo.quanmbshop.customview.MyGridView
                    android:id="@+id/GridView_PIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:numColumns="3"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/image_line8"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/skill_pic"
                android:background="@color/gray_background"
                />
            <ImageView
                android:id="@+id/image_shoppic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@color/gray_dfdfdf"
                android:layout_below="@+id/image_line8"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/text_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="商家姓名"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line8"
                android:layout_marginTop="27.5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/image_shoppic"
                android:lines="1"
                />
            <RelativeLayout
                android:id="@+id/layout_shopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_shoppic"
                >
                <ImageView
                    android:id="@+id/image_line"
                    android:layout_width="0.5dp"
                    android:layout_height="60dp"
                    android:src="@color/gray_background"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_toLeftOf="@+id/image_line"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_shopin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="时间"
                        android:textColor="@color/black_text"
                        android:lines="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="加入全民帮"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_hide_tip"
                        android:lines="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lineatlayout_count"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@+id/image_line"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/text_releaseCounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="数量"
                        android:textColor="@color/black_text"
                        android:lines="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="发布帖子"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_hide_tip"
                        android:lines="1"
                        />
                </LinearLayout>


            </RelativeLayout>



            <ImageView
                android:id="@+id/image_line9"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_shopInfo"
                android:background="@color/gray_background"
                />
            <TextView
                android:id="@+id/text_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="办理业务前请不要付"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <TextView
                android:id="@+id/text_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="定金、押金"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:layout_toRightOf="@+id/text_f"
                />
            <TextView
                android:id="@+id/text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="等费用!"
                android:textColor="@color/black_text"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:layout_toRightOf="@+id/text_g"
                />
            <TextView
                android:id="@+id/text_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="请先确认对方资质，谨防上当受骗！"
                android:textColor="@color/black_text"
                android:layout_below="@+id/text_f"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                />
            <ImageView
                android:id="@+id/image_complain"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@+id/image_line9"
                android:layout_alignParentRight="true"
                android:src="@mipmap/complain"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="投诉"
                android:textColor="@color/yellow_jianbian_end"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/image_complain"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:src="@color/text_hide_tip"
                android:layout_toLeftOf="@+id/image_complain"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/image_line9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />



        </RelativeLayout>
    </com.jingnuo.quanmbshop.customview.CustomerScrollView>
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/gray_background"-->
        <!--android:layout_above="@+id/linearlayout_bottom"-->
        <!--/>-->
    <LinearLayout
        android:id="@+id/linearlayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/linearlayout_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageview_collect"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:src="@drawable/select_collect" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray_969696"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_phonenumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/yellow_jianbian_start"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/phone_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/yellow_jianbian_end"
            >
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/chat_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微聊"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
