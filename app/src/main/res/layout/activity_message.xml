<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context="com.jingnuo.quanmbshop.activity.MessageActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="消息"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_systemnotice"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/notice" />
        <ImageView
            android:id="@+id/image_reddot1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@mipmap/red_dot"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image_1"
            android:text="系统消息"
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_systemnotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image_1"
            android:text="暂时没有系统消息"
            android:lines="1"

            android:layout_marginRight="20dp"
            android:textColor="@color/text_hide_tip"
            android:textSize="15dp"

            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dbdbdb" />


    <RelativeLayout
        android:id="@+id/relativelayout_Kanprice"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/price" />
        <ImageView
            android:id="@+id/image_reddot2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@mipmap/red_dot"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image_2"
            android:text="还价消息"
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_moneynotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image_2"
            android:text="暂时没有新消息"
            android:lines="1"
            android:textColor="@color/text_hide_tip"
            android:textSize="15dp"

            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dbdbdb" />

    <RelativeLayout
        android:id="@+id/relativelayout_Jiaoyinotice"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/money" />
        <ImageView
            android:id="@+id/image_reddot3"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@mipmap/red_dot"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image_3"
            android:text="交易提醒"
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_jiaoyitixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image_3"
            android:lines="1"
            android:text="暂无交易"
            android:textColor="@color/text_hide_tip"
            android:textSize="15dp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/image_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dbdbdb" />
    <RelativeLayout
        android:id="@+id/relativelayout_tuijianrenwu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/tuijianrenwu" />
        <ImageView
            android:id="@+id/image_reddot4"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@mipmap/red_dot"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image_4"
            android:text="推荐任务"
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_tujianrenwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image_4"
            android:lines="1"
            android:text="暂无新的推荐任务"
            android:textColor="@color/text_hide_tip"
            android:textSize="15dp" />

    </RelativeLayout>
</LinearLayout>