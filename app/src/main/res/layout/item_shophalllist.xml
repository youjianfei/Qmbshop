<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/image_shoppic"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/image_call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"

        />
    <ImageView
        android:id="@+id/image_zhiding"
        android:layout_width="32dp"
        android:layout_height="16dp"
        android:src="@mipmap/zhiding2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_shoppic"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/text_shopskills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="15dp"
        android:text="         专业灯具上门安装 维修 清洗 养护"
        android:layout_toRightOf="@+id/image_shoppic"
        android:layout_toLeftOf="@+id/image_call"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"

        />
    <TextView
        android:id="@+id/textview_address"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="二七万达"
        android:layout_below="@+id/text_shopskills"
        android:layout_toRightOf="@id/image_shoppic"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
       />

    <TextView
        android:id="@+id/textview_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证身份"
        android:textColor="@color/yellow_jianbian_end"
        android:padding="2dp"
        android:layout_below="@+id/text_shopskills"
        android:textSize="11dp"
        android:layout_toLeftOf="@+id/image_call"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_yellow"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        />
        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="54dp"
            android:background="@color/gray_969696"
            android:layout_toLeftOf="@+id/image_call"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            />
</RelativeLayout>
