<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingnuo.quanmbshop.activity.LocationMapActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_gray_corners"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/search"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/edit_searchaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="搜索地址"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_title2"
                android:textColorHint="@color/text_hide_tip"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/iamge_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        >
        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
        <ImageView
            android:id="@+id/iamge_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/location_icon"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="确  定"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_yellow_20dp"
        />
    <RelativeLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_text_type"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/button_submit"
        >
        <ImageView
            android:id="@+id/image_address"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/address"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_mapget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前位置："
            android:layout_toRightOf="@+id/image_address"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/image_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_mapget"
            android:background="@color/gray_dfdfdf"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/textview_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_line"
            android:text="详细地址"
            android:singleLine="true"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:visibility="visible"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_searchaddresslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        android:background="@drawable/background_text_type"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/button_addresssubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_logintitle"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="确 定"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:visibility="gone"
        />



</RelativeLayout>
