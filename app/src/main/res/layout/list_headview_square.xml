<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout_headbackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/image_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/relativeLayout_headbackground"
        android:background="@color/gray_background"
        />
    <RelativeLayout
        android:id="@+id/relative_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_line"
        android:background="@drawable/background_white_corners_8_shang"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/tttt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/hottask"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门任务"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_above="@+id/relative_shaixuan"
            />

        <RelativeLayout
            android:id="@+id/relative_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tttt"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_miaobian_gray_20dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/search"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/edit_searchSquare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="搜索任务"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_title2"
                    android:textColorHint="@color/text_hide_tip"
                    android:textSize="13dp"
                    android:imeOptions="actionSearch"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="110dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="筛选"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/textview_paixuhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="智能排序"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
