<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relative_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_banyungong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/selsect_task_typebackground"
            >

            <ImageView
                android:id="@+id/image_banyungong"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_banyungong" />

            <TextView
                android:id="@+id/text_banyungong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="搬运工"
                android:layout_marginBottom="5dp"

                android:textColor="@drawable/selsect_task_typetext"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_qingjie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selsect_task_typebackground"
            >

            <ImageView
                android:id="@+id/image_qingjie"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_qingjie"  />

            <TextView
                android:id="@+id/text_qingjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:layout_marginTop="5dp"
                android:text="清洁"
                android:textColor="@drawable/selsect_task_typetext"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bangmai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selsect_task_typebackground"
            >

            <ImageView
                android:id="@+id/image_bangmai"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_bangmai"  />

            <TextView
                android:id="@+id/text_bangmai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:text="帮买帮送"
                android:textColor="@drawable/selsect_task_typetext"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_yuyue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selsect_task_typebackground"
            >

            <ImageView
                android:id="@+id/image_yuyue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_yuyue"  />

            <TextView
                android:id="@+id/text_yuyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:textColor="@drawable/selsect_task_typetext"
                android:text="预约排队"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_daijia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/selsect_task_typebackground"
            >

            <ImageView
                android:id="@+id/image_daijia"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_daijia" />

            <TextView
                android:id="@+id/text_daijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="代驾"
                android:layout_marginBottom="5dp"

                android:textColor="@drawable/selsect_task_typetext"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_dingzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selsect_task_typebackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_dingzhi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/selsect_task_dingzhi" />

            <TextView
                android:id="@+id/text_dingzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="私人订制"
                android:textColor="@drawable/selsect_task_typetext"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_2"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/taskexplain" />

        <EditText
            android:id="@+id/edit_detailtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_line1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image2"
            android:background="@null"
            android:gravity="top"
            android:hint="请描述你的任务，不少于5字"
            android:lines="3"
            android:textColorHint="@color/text_hide_tip"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/image_chosePIC"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/edit_detailtask"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/chosepic" />

        <com.jingnuo.quanmbshop.customview.MyGridView
            android:id="@+id/GridView_PIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_detailtask"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:numColumns="3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/GridView_PIC"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray_background" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_line2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="预约时间："
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/relative_chosetime"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/image_line2">

            <TextView
                android:id="@+id/edit_tasktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="15dp"
                android:text="尽快"
                android:textColor="@color/text_hide_tip"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="17dp"
                android:src="@mipmap/more" />

        </RelativeLayout>
    </RelativeLayout>

