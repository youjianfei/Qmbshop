    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_3"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearlayout_yongjin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_chooseme"
                android:layout_width="15dp"
                android:layout_height="15dp"

                android:layout_marginRight="5dp"
                android:src="@drawable/select_duigou" />

            <TextView
                android:id="@+id/textview_chooseme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="由我出价" />

            <ImageView
                android:id="@+id/image_choosehelper"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/select_duigou" />

            <TextView
                android:id="@+id/text_choosehelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="由帮手出价" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_chujia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_yongjin">

            <ImageView
                android:id="@+id/image_line10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_background" />

            <EditText
                android:id="@+id/edit_charges"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:digits="1234567890."
                android:hint="请输入佣金(不少于5元)"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:textColorHint="@color/text_hide_tip"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/image_line8"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_choosejieshou"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/select_duigou" />

                <TextView
                    android:id="@+id/text_choosejieshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受议价" />

