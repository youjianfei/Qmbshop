<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmbshop.activity.PersonInfoActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的头像"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/text_title2"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_userpic"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/user_pic" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            />
        <ImageView
            android:id="@+id/image_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="15dp"
            android:background="@color/gray_background"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_line1"
            android:textColor="@color/text_title2"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/image_line1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/text_title2"

            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            android:layout_below="@+id/image_line1"
            />
        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="15dp"
            android:background="@color/gray_background"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            android:layout_below="@+id/image_line2"
            />
        <TextView
            android:id="@+id/text_issetshequ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全民帮社区"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/image_line2"
            android:textColor="@color/black_text2"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_setshequ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的社区"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_line2"
            android:textColor="@color/text_title2"
            />
        <ImageView
            android:id="@+id/image_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_setshequ"
            android:layout_marginTop="15dp"
            android:background="@color/gray_background"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换手机号"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_line5"
            android:textColor="@color/text_title2"
            />
        <TextView
            android:id="@+id/text_phonrnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1300000000"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/image_line5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textColor="@color/text_title2"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            android:layout_below="@+id/image_line5"
            />
        <ImageView
            android:id="@+id/image_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text3"
            android:layout_marginTop="15dp"
            android:background="@color/gray_background"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            android:layout_below="@+id/image_line3"
            />
        <TextView
            android:id="@+id/text_changephonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_line3"
            android:textColor="@color/text_title2"
            />

        <ImageView
            android:id="@+id/image_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_changephonenumber"
            android:layout_marginTop="15dp"
            android:background="@color/gray_background"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/more"
            android:layout_below="@+id/image_line4"
            />
        <TextView
            android:id="@+id/text_issetsafepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已设置"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/image_line4"
            android:textColor="@color/black_text2"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_setsafepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付密码"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/image_line4"
            android:textColor="@color/text_title2"
            android:layout_marginBottom="15dp"

            />

    </RelativeLayout>


</RelativeLayout>
