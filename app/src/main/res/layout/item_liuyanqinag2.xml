<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relayout_liuyan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_liuyanqiang1"
        >
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_below="@+id/linearlayout_twos"
            android:textColor="@color/black_text"
            android:layout_marginBottom="20dp"
            />
        <!--<TextView-->
            <!--android:id="@+id/text_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="发布时间"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginTop="22dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:textSize="12dp"-->
            <!--android:textColor="@color/text_title2"-->
            <!--/>-->
        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言墙内容"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black_text"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:id="@+id/linearlayout_twos"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/iamge_1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@color/white"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iamge_2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@color/white"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@color/black"
                android:layout_below="@+id/text_name"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                />
        </LinearLayout>
    </RelativeLayout>





</LinearLayout>
