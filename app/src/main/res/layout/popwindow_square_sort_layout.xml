<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    >
    <LinearLayout
        android:id="@+id/relative_sort"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_sort"
        android:background="@drawable/background_text_white_15"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/text_filter_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="筛选"
                android:textColor="#888888"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/shaixuan"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_sort_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/text_paixuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="智能排序"
                android:textColor="#888888"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jiantou_xia1"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/gray_background"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--/>-->


    </LinearLayout>
    <include
        android:id="@+id/include_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_popwindow_square_sort"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <include
        android:id="@+id/include_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_popwindow_square_filter"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iamgeview_a"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/black"
        />
</LinearLayout>
