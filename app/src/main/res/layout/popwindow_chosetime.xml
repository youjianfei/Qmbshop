<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="请选择服务时间"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:textSize="16dp"
                android:textColor="@color/black_text"
                android:layout_height="40dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_dbdbdb"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.jingnuo.quanmbshop.customview.EasyPickerView
                android:id="@+id/easeview_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                custom:epvMaxShowNum="5"
                custom:epvRecycleMode="false"
                custom:epvTextColor="@color/text_gray"
                custom:epvTextMaxScale="1.25"
                custom:epvTextMinAlpha="0.35"
                custom:epvTextPadding="10dp"
                custom:epvTextSize="15dp"
                />
            <com.jingnuo.quanmbshop.customview.EasyPickerView
                android:id="@+id/easeview_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                custom:epvMaxShowNum="5"
                custom:epvRecycleMode="true"
                custom:epvTextColor="@color/text_gray"
                custom:epvTextMaxScale="1.25"
                custom:epvTextMinAlpha="0.35"
                custom:epvTextPadding="10dp"
                custom:epvTextSize="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@color/gray_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/text_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:textSize="16dp"
                android:textColor="@color/black_text"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/text_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@color/yellow_jianbian_end"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
