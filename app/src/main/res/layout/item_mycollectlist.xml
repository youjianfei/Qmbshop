<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/image_shoppic"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="13dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/text_shopskills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="15dp"
        android:text="专业灯具上门安装 维修 清洗 养护"
        android:layout_toRightOf="@+id/image_shoppic"
        android:layout_toLeftOf="@+id/image_call"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"

        />
    <TextView
        android:id="@+id/textview_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二七万达"
        android:layout_below="@+id/text_shopskills"
        android:layout_toRightOf="@id/image_shoppic"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
       />
    <TextView
        android:id="@+id/textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20130504"
        android:layout_below="@+id/text_shopskills"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        />

</RelativeLayout>
