<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearlayout_zhaorenshou"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_2"
        android:layout_marginTop="8dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/image2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/taskexplain" />

        <EditText
            android:id="@+id/edit_detailtask_zhaorenshou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_line1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/image2"
            android:background="@null"
            android:gravity="top"
            android:hint="请描述你的任务，不少于5字"
            android:lines="3"
            android:textColorHint="@color/text_hide_tip"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/image_chosePIC_zhaorenshou"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/edit_detailtask_zhaorenshou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/chosepic" />

        <com.jingnuo.quanmbshop.customview.MyGridView
            android:id="@+id/GridView_PIC_zhaorenshou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_detailtask_zhaorenshou"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:numColumns="3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/GridView_PIC_zhaorenshou"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray_background" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_line2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="预约时间："
            android:textColor="@color/text_title2"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/relative_chosetime_zhaorenshou"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/image_line2">

            <TextView
                android:id="@+id/text_yuyueshijijian_zhaorenshou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="15dp"
                android:text="请选择预约时间"
                android:textColor="@color/text_hide_tip"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="17dp"
                android:src="@mipmap/more" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/relative_1"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/address_blue" />

        <TextView
            android:id="@+id/text_chooseaddress_zhaorenshou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="选择地址"
            android:textColor="@color/text_hide_tip"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edit_detailaddress_zhaorenshou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1.2"
            android:background="@null"
            android:gravity="right"
            android:hint="输入详细地址"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColorHint="@color/text_hide_tip"
            android:textSize="14dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_3"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearlayout_yongjin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_chooseme"
                android:layout_width="15dp"
                android:layout_height="15dp"

                android:layout_marginRight="5dp"
                android:src="@drawable/select_duigou" />

            <TextView
                android:id="@+id/textview_chooseme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="由我出价" />

            <ImageView
                android:id="@+id/image_choosehelper"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/select_duigou" />

            <TextView
                android:id="@+id/text_choosehelper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="由帮手出价" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_chujia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_yongjin">

            <ImageView
                android:id="@+id/image_line10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_background" />

            <EditText
                android:id="@+id/edit_charges"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:digits="1234567890."
                android:hint="请输入佣金(不少于5元)"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:textColorHint="@color/text_hide_tip"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/image_line8"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_choosejieshou"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/select_duigou" />

                <TextView
                    android:id="@+id/text_choosejieshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受议价" />

                <!--<ImageView-->
                <!--android:id="@+id/image_choosejujue"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:src="@drawable/select_duigou"-->
                <!--android:layout_marginRight="5dp"-->
                <!--/>-->

                <!--<TextView-->
                <!--android:id="@+id/text_choosejujue"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="拒绝"-->
                <!--android:layout_marginRight="5dp"-->
                <!--/>-->


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
