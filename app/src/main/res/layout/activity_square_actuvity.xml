<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmbshop.activity.SquareActuvity">
    <!--虚假布局，抢走editview的焦点-->
    <LinearLayout
        android:id="@+id/linearLayout_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        />
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帮帮广场"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <RelativeLayout
            android:id="@+id/relayout_address"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/textview_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:text="定位中"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/iamge_jiantou"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jiantou_xia"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_background"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_empty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/empty_1"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list_square"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        ptr:ptrMode="both"
        android:layout_below="@+id/re_title"
        />
    <RelativeLayout
        android:id="@+id/relative_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_title"
        android:background="@color/white"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/tttt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/hottask"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门任务"
            android:textSize="15dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:layout_above="@+id/relative_shaixuan"
            />
        <RelativeLayout
            android:id="@+id/relative_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tttt"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_miaobian_gray_20dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/search"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/edit_searchSquare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="搜索任务"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_title2"
                    android:textColorHint="@color/text_hide_tip"
                    android:textSize="13dp"
                    android:imeOptions="actionSearch"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="110dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="筛选"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/textview_paixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="智能排序"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jiantou_xia1"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_background"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>