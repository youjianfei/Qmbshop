<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.jingnuo.quanmbshop.activity.TaskDetailsActivity">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="任务详情"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/iv_3dian"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/dian3" />

    </RelativeLayout>
    <com.jingnuo.quanmbshop.customview.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_title"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white_10dp"
                android:layout_margin="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_task"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/user_pic"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雇主"
                    android:textSize="15dp"
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/image_task"
                    />
                <TextView
                    android:id="@+id/text_taskstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全民帮"
                    android:textSize="12dp"
                    android:textColor="@color/yellow_jianbian_end"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/text_yellow_miaobian_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="13dp"
                    />

                <TextView
                    android:id="@+id/text_tasktime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text2"
                    android:text="发布时间："
                    android:textSize="13dp"
                    android:layout_toRightOf="@+id/image_task"
                    android:layout_below="@+id/text_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="13dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re1"
                android:background="@drawable/button_white_10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/taskdetail"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务说明"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#7f7f7f"
                    />
                <TextView
                    android:id="@+id/text_taskdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:text=""
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#7f7f7f"
                    />

                <RelativeLayout
                    android:id="@+id/skill_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/text_taskdetail"
                    >
                    <com.jingnuo.quanmbshop.customview.MyGridView
                        android:id="@+id/GridView_PIC"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/white"
                        android:numColumns="3"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@color/gray_dfdfdf"
                    android:layout_below="@+id/skill_pic"
                    android:layout_marginTop="5dp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/resttime"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_below="@+id/line2"
                    />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2"
                    android:text="预约时间"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#7f7f7f"
                    />
                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="#7f7f7f"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/line2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@color/gray_dfdfdf"
                    android:layout_below="@+id/text3"
                    android:layout_marginTop="16dp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/address_blue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_below="@+id/line3"
                    />
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line3"
                    android:text="地点"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#7f7f7f"
                    />
                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="#7f7f7f"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/line3"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/re2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_white_10dp"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/money_blue" />
                <TextView
                    android:id="@+id/text111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佣金"
                    android:textSize="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#7f7f7f"
                    />
                <TextView
                    android:id="@+id/text_taskmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/yellow_jianbian_end"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>



        </RelativeLayout>

    </com.jingnuo.quanmbshop.customview.CustomerScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/linearlayout_zixun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_yellow2"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zixun2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:enabled="false"
                android:gravity="center"
                android:text="咨询"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_tel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/button_bargain2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="还 价"
                android:layout_margin="7dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@drawable/button_yellow_star_5dp"
                android:visibility="visible"
                />
            <Button
                android:id="@+id/button_help2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="确认帮助"
                android:textSize="15dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/white"
                android:background="@drawable/button_green_5dp"
                android:visibility="visible"
                />

        </LinearLayout>
        <Button
            android:id="@+id/button_bargain"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="还 价"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_margin="7dp"
            android:background="@drawable/button_yellow_star_5dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/button_help"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="确认帮助"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_margin="7dp"
            android:background="@drawable/button_green_5dp"
            android:visibility="gone"
            />


    </LinearLayout>





</RelativeLayout>
